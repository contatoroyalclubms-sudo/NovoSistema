# ================================
# SISTEMA UNIVERSAL DE EVENTOS
# Arquivo de Configuração de Ambiente
# ================================

# ================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventos_db
DB_USER=eventos_user
DB_PASSWORD=eventos_2024_secure!

# URL completa do banco (será construída automaticamente se não fornecida)
# DATABASE_URL=postgresql://eventos_user:eventos_2024_secure!@localhost:5432/eventos_db

# ================================
# CONFIGURAÇÕES DE REDIS (CACHE)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=eventos_redis_2024!

# ================================
# CONFIGURAÇÕES DE SEGURANÇA
# ================================
SECRET_KEY=ultra_secure_secret_key_eventos_2024_production_change_this
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================
# CONFIGURAÇÕES DE AMBIENTE
# ================================
ENVIRONMENT=production
DEBUG=false

# ================================
# CONFIGURAÇÕES DE CORS
# ================================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,http://localhost:4201

# ================================
# CONFIGURAÇÕES DE PERFORMANCE
# ================================
WORKERS=4
MAX_CONNECTIONS=100

# ================================
# CONFIGURAÇÕES DO FRONTEND
# ================================
VITE_API_BASE_URL=http://localhost:8002
VITE_WS_BASE_URL=ws://localhost:8002
VITE_APP_NAME=Sistema Universal de Eventos
VITE_APP_VERSION=3.0.0

# ================================
# CONFIGURAÇÕES DE PORTAS
# ================================
BACKEND_PORT=8002
FRONTEND_PORT=3000

# ================================
# CONFIGURAÇÕES DE EMAIL
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ================================
# CONFIGURAÇÕES DE UPLOAD
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ================================
SENTRY_DSN=
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ================================
OPENAI_API_KEY=
WHATSAPP_API_KEY=
PAYMENT_API_KEY=

# ================================
# CONFIGURAÇÕES DE STORAGE
# ================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1